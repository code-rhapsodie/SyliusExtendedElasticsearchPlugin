<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag_sylius_elasticsearch_plugin.finder.named_products" class="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Finder\NamedProductsFinder">
            <argument type="service" id="bitbag_sylius_elasticsearch_plugin.query_builder.products_by_partial_name" />
            <argument type="service" id="fos_elastica.finder.bitbag_shop_product.default" />
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.finder.shop_products" class="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Finder\ShopProductsFinder">
            <argument type="service" id="bitbag_sylius_elasticsearch_plugin.query_builder.shop_products" />
            <argument type="service" id="fos_elastica.finder.bitbag_shop_product.default" />
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.finder.product_options" class="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Finder\ProductOptionsFinder">
            <argument type="service" id="fos_elastica.finder.bitbag_option_taxons.default" />
            <argument type="service" id="bitbag_sylius_elasticsearch_plugin.query_builder.product_options_by_taxon" />
            <argument>%cr_ees_shop_option_taxons_property%</argument>
            <argument>%cr_ees_filter_options_max%</argument>
        </service>

        <service id="bitbag_sylius_elasticsearch_plugin.finder.product_attributes" class="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Finder\ProductAttributesFinder">
            <argument type="service" id="fos_elastica.finder.bitbag_attribute_taxons.default" />
            <argument type="service" id="bitbag_sylius_elasticsearch_plugin.query_builder.product_attributes_by_taxon" />
            <argument>%cr_ees_shop_attribute_taxons_property%</argument>
            <argument>%cr_ees_filter_attributes_max%</argument>
        </service>
    </services>
</container>
