<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="cr_sylius_extended_elasticsearch_plugin.controller.action.shop.list_products" class="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Controller\Action\Shop\ListProductsAction">
            <argument type="service" id="form.factory" />
            <argument type="service" id="cr_sylius_extended_elasticsearch_plugin.controller.request_data_handler.shop_product_list" />
            <argument type="service" id="cr_sylius_extended_elasticsearch_plugin.controller.request_data_handler.shop_products_sort" />
            <argument type="service" id="cr_sylius_extended_elasticsearch_plugin.controller.request_data_handler.pagination" />
            <argument type="service" id="cr_sylius_extended_elasticsearch_plugin.finder.shop_products" />
            <argument type="service" id="templating" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="cr_sylius_extended_elasticsearch_plugin.controller.action.shop.search" class="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Controller\Action\Shop\SearchAction">
            <argument key="$templatingEngine" type="service" id="templating" />
            <argument key="$finder" type="service" id="fos_elastica.finder.bitbag_shop_product.default" />
            <argument key="$searchFormEventListener" type="service" id="bitbag.sylius_elasticsearch_plugin.block_event_listener.search_form" />
            <argument key="$facetRegistry" type="service" id="cr_sylius_extended_elasticsearch_plugin.facet.registry" />
            <argument key="$searchProductsQueryBuilder" type="service" id="cr_sylius_extended_elasticsearch_plugin.query_builder.search_products" />
            <argument key="$paginationDataHandler" type="service" id="cr_sylius_extended_elasticsearch_plugin.controller.request_data_handler.pagination" />
            <argument key="$facetGateway" type="service" id="CodeRhapsodie\SyliusExtendedElasticsearchPlugin\Facet\Gateway\FacetGatewayInterface" />
            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
